
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            E-mail
        </th>
        <th>
            Telephone
        </th>
        
        <th align="right"/>
		<th ng-repeat="shit in TableAppends" />
    </tr>

    <tr ng-repeat="user in UserList.data">
        <td>
           {{user.LastName}}, {{user.FirstName}}
        </td>
        <td>
            {{user.Email}}
        </td>
        <td>
            {{user.PhoneNumber}}
        </td>
        <td align="right">
			@{
                var details = Url.Action("Details", "Users", new { id = "{{user.Id}}", ReturnUrl = Request.Url.AbsoluteUri });
                details = HttpUtility.UrlDecode(details);
                var edit = Url.Action("Edit", "Users", new { id = "{{user.Id}}", ReturnUrl = Request.Url.AbsoluteUri  });
                edit = HttpUtility.UrlDecode(edit);
			}

			<a class="btn btn-primary" data-ng-href="@details">Details</a> &nbsp;
			<a class="btn btn-success" data-ng-href="@edit">Edit</a> &nbsp;
			<span ng-repeat="shit in TableAppends" bind-compiled-html="shit"/>
        </td>
		<td />
    </tr>
</table>

@using LMS.Models
@model LMS.Models.KlassDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div ng-app="KlassApp" ng-controller="KlassMemberTable" ng-init="KlassId = @Model.Klass.ID">
	<h4>Klass</h4>
	<hr />
	@Html.ActionLink("Shared files", "Index", "SharedFiles", new { KlassID = @Model.Klass.ID }, new {})

	<div @*fuck html, that's why*@
		 ng-init="showshit = false; NonMembersTableAppends.push('&lt;td&gt;&lt;button ng-click=&quot;Funcs.AddMember(user)&quot;&gt;Add&lt;/button&gt;&lt;/td&gt;')">

		<button ng-click="showshit = !showshit">Add members</button>
		<div ng-show="showshit" ng-init="GetData('getnonmembers?id=' + '@Model.Klass.ID', NonMembers)">
			<div ng-controller="UserListController" ng-init="tag='NonMembers'; GetShit()">
				@Html.Partial("~/Views/Users/UserListPartial.cshtml")
			</div>
		</div>

	</div>

	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.Klass.Name)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Klass.Name)
		</dd>
	</dl>

	<div
		 ng-init="MembersTableAppends.push('&lt;td&gt;&lt;button ng-click=&quot;Funcs.RemoveMember(user)&quot;&gt;Remove&lt;/button&gt;&lt;/td&gt;')">
		<div ng-init="userList={data: null}; GetData('getmembers?id=' + '@Model.Klass.ID', Members)">
			<div ng-controller="UserListController" ng-init="tag='Members'; GetShit()">
				@Html.Partial("~/Views/Users/UserListPartial.cshtml")
			</div>
		</div>
	</div>
</div>

<p>
	@Html.ActionLink("Edit", "Edit", "Index")|
    @Html.ActionLink("Back to List", "Index")
</p>

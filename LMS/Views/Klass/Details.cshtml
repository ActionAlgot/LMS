@model LMS.Models.KlassDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div ng-app="KlassApp">
    <h4>Klass</h4>
    <hr />

	<div ng-controller="KlassMemberTable" @*fuck html, that's why*@
		 ng-init="KlassId = @Model.Klass.ID; showshit = false; TableAppends.push('&lt;td&gt;&lt;button ng-click=&quot;AddMember(user.Id)&quot;&gt;Add&lt;/button&gt;&lt;/td&gt;')">

		<button ng-click="showshit = !showshit">Add members</button>
		<div ng-show="showshit" ng-init="userList = {data: null}; GetData('getnonmembers?id=' + '@Model.Klass.ID', userList)">
			@Html.Partial("~/Views/Users/UserListPartial.cshtml")
		</div>
	</div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Klass.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Klass.Name)
        </dd>
    </dl>

	<div ng-controller="KlassMemberTable"
		 ng-init="KlassId = @Model.Klass.ID; TableAppends.push('&lt;td&gt;&lt;button ng-click=&quot;RemoveMember(user.Id)&quot;&gt;Remove&lt;/button&gt;&lt;/td&gt;')">
		<div ng-init="userList={data: null}; GetData('getmembers?id=' + '@Model.Klass.ID', userList)">
			@Html.Partial("~/Views/Users/UserListPartial.cshtml")
		</div>
	</div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Klass.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

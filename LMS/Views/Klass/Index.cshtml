@model IEnumerable<LMS.Models.Klass>

@{
    ViewBag.Title = "Index";
}

<h2>Manage Classes / Courses</h2>

<p>
    @Html.ActionLink("Create New", "Create" , new { }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <h4>
                @Html.DisplayFor(modelItem => item.Name)
            </h4>
        </td>
        <td>
            @Html.ActionLink("Manage", "Details", new { id=item.ID }, new { @class = "btn btn-primary" }) &nbsp;
            @Html.ActionLink("Delete", "Delete", new { id=item.ID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
